#!/bin/sh

set -euf

exec rsync --archive --progress --partial --stats \
{% for item in rsync_excludes %}
	--exclude '{{ item }}' \
{% endfor %}
	/srv/video/{{ org }}/{{ show }}/dv/{{ room_name }}/ \
{% if rsync_sshopts %}
	-e "ssh {{rsync_sshopts}}" \
{% endif %}
	{{ storage_username }}@{{ nfs_server }}:/srv/{{ nfs_server }}/video/{{ org }}/{{ show }}/dv/{{ room_name }}/
